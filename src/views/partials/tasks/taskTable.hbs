{{#if tasks}}

  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N.</th>
        <th>Título</th>
        <th>Descripción</th>
        <th>Operaciones</th>
      </tr>
    </thead>

    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>
            {{#if done}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-dark"
              >Sin terminar</a>
            {{else}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-success"
              >Terminada</a>
            {{/if}}

            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Borrar</a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">Editar</a>
          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>

{{else}}

  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h2>No hay tareas</h2>
      <img src="/icons/empty.svg" alt="" class="w-75"/>
    </div>
  </div>
{{/if}}