<div class="card card-body p-4 rounded-0 bg-dark text-white form-hover">
  <h3>Agrega una tarea <img src="/icons/empty.svg" alt=""></h3>

  <form action="/task/add" method="POST">

    <div>
      <label for="title">Título:</label>
      <input
        type="text"
        name="title"
        placeholder="Título"
        id="title"
        class="form-control rounded-0 bg-dark text-white"
      />
    </div>

    <div>

      <label for="description">Descripción</label>
      <textarea
        name="description"
        id="description"
        placeholder="Descripción"
        class="form-control rounded-0 bg-dark text-white"
      ></textarea>
    </div>

    <button class="btn btn-primary btn-sm mt-2">Agregar</button>

  </form>
</div>