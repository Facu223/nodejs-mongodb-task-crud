<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounded-0">
        <form action="/tasks/{{task._id}}/edit" method="POST">
          <h1>Edita una tarea</h1>
          <div class="mb-3">
            <input
              type="text"
              name="title"
              placeholder="Título"
              value="{{task.title}}"
              class="form-control rounded-8 bg-dark text-white"
            />
          </div>

          <div class="mb-3">
            <textarea
              name="description"
              rows="3"
              placeholder="Editar descripción"
              class="form-control rounded-8 bg-dark text-white"
            >{{task.description}}</textarea>
          </div>

          <button class="btn btn-primary">Actualizar</button>
        </form>
      </div>
    </div>
  </div>
</div>